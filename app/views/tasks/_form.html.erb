<%= form_with model: task, local: false do |form| %>
	<div class="form-group mb-3">
		<%= form.collection_select :category_id, Category.all, :id, :title, { prompt: "Select a category" }, class: "form-control" %>
	</div>

	<div class="form-group mb-3">
		<%= form.text_field :title, class: "form-control", placeholder: "Enter a task" %>
	</div>
<% end %>